@page "/staffpage"
@using Microsoft.AspNetCore.Authorization


@attribute [Authorize(Roles = "Administrator, User")]

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 text-center mb-4">
                <h1 class="display-6">Staff Dashboard</h1>
                <p class="text-muted">Manage reservations and view updates.</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5>Today's Reservations</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">Reservation #1: John Doe - 6:00 PM</li>
                            <li class="list-group-item">Reservation #2: Jane Smith - 7:30 PM</li>
                            <li class="list-group-item">Reservation #3: Michael Tan - 8:00 PM</li>
                            <li class="list-group-item text-center text-muted">More...</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5>Table Availability</h5>
                    </div>
                    <div class="card-body">
                        <div class="progress mb-3">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75% Occupied</div>
                        </div>
                        <p class="text-muted">Keep track of table availability in real time.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5>Notifications</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">New reservation from James Lee at 9:00 PM</li>
                            <li class="list-group-item">Cancelled reservation: Sarah Wong</li>
                            <li class="list-group-item text-center text-muted">No more notifications.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5>Actions</h5>
                    </div>
                    <div class="card-body text-center">
                        <button class="btn btn-primary mb-2">Add Reservation</button>
                        <button class="btn btn-secondary mb-2">Update Table Status</button>
                        <button class="btn btn-danger">Logout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
