<div id="liveAlertPlaceholder"></div>

@page "/Registration"

<PageTitle>Registration</PageTitle>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<body>

	<header>

		<h1>Athens.</h1>
	</header>
	<p class="paragraph"> Your choice of premium Greek food.</p>

	<h2 class="subheading">Register</h2>

	<form onsubmit="return validatePassword()">
		<div class="form-container">
			<div class="username">
				<label for="username">Username:ㅤ</label>
				<input type="text" id="username" name="username" class="text-field">
			</div>

			<div class="password">
				<label for="password">Password:ㅤ</label>
				<input type="password" id="password" name="password" class="text-field">
			</div>
	
			<div class="reenter-password">
				<label for="reenter-password">Re-Enter Password:ㅤ</label>
				<input type="password" id="reenter-password" name="reenter-password" class="text-field">
			</div>

			<div class="submit-button-container">
				
				<button type="submit" id="Submit">Submit</button>
				</div>
		</div>

	</form>


	<div class="button-container">
		<button type="homebutton" onclick="window.location.href='/'">Home</button>
	</div>

	<div class="login-button-container">
		<button type="loginbutton" onclick="window.location.href='/Login'">Login</button>
	</div>


	<footer>
		<small><i>Copyright &copy; 2024 Ruben x John</i></small> <!-- Add your name -->
	</footer>


	<!--below lies the javascript function for password and re-enter password validation -->
	<script>

		const alertPlaceholder = document.getElementById('liveAlertPlaceholder');
		const appendAlert = (message, type) => {
		const wrapper = document.createElement('div');
		wrapper.innerHTML = [
			`<div class="alert alert-${type} alert-dismissible" role="alert">`,
			`   <div>${message}</div>`,
			'   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
			'</div>'
		].join('');
		alertPlaceholder.append(wrapper);
		};

		function validatePassword() {
			var username = document.getElementById('username').value;
			var usernameLength = username.length;
			var password = document.getElementById('password').value;
			var passwordLength = password.length;
			var reenterPassword = document.getElementById('reenter-password').value;

			if (password != reenterPassword) {
				appendAlert('Passwords do not match! Please ensure they are identical.', 'danger');
				return false;
			} 
			
			else if (passwordLength < 8) {
				appendAlert('Password must have a minimum length of 8 characters.', 'danger');
				return false;
			} 
			
			else if (usernameLength < 3) {
				appendAlert('Username must have a minimum length of 3 characters.', 'danger');
				return false;
			}

			else {
				appendAlert('You have successfully created your account.', 'success');
				return false;
			}
		}

	
	</script>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>




</body>
